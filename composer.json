{
    "name": "intensedr/slim3-api-starter",
    "description": "A skeleton structure for api based on Slim",
    "keywords": ["framework", "slim"],
    "license": "MIT",
    "type": "project",
    "require": {
    	"php": ">=7.0.0",
        "slim/slim": "^3.8",
        "symfony/var-dumper": "^3.2",
        "vlucas/phpdotenv": "^2.4",
        "monolog/monolog": "^1.24",
        "illuminate/database": "^5.7",
        "illuminate/pagination": "^5.7",
        "robmorgan/phinx": "^0.11.1",
        "tuupola/cors-middleware": "^1.0",
        "firebase/php-jwt": "^5.0",
        "davidepastore/slim-validation": "^0.5.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
